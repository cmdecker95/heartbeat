---
type Post = {
  title: string;
  slug: string;
  image: string;
  imageAlt: string;
};

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<div class="carousel">
  <div class="arrows">
    <div class="left">
      <i class="fa-solid fa-chevron-left"></i>
    </div>
    <div class="right">
      <i class="fa-solid fa-chevron-right"></i>
    </div>
  </div>
  <ul class="items">
    {
      posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}/`}>
            <img
              width={300}
              height={300}
              src={post.image}
              alt={post.imageAlt}
            />
            <h4 class="title">{post.title}</h4>
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .carousel {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
  .arrows {
    display: flex;
    gap: 1rem;
    justify-content: center;
    width: fit-content;
  }
  .left,
  .right {
    --circle-size: 36px;
    background: var(--main-600);
    border-radius: 50%;
    color: var(--white);
    display: grid;
    height: var(--circle-size);
    place-items: center;
    width: var(--circle-size);
  }
  .items {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 1rem;
  }
  a {
    text-decoration: none;
  }
  .title {
    color: var(--gray-700);
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0.5rem 0 0.25rem;
    transition: all 0.2s ease-in-out;
  }
</style>
