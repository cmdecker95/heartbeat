---
import { Image } from "astro:assets";
import NavLink from "./NavLink.astro";
---

<nav>
  <a href="/">
    <Image
      src="/logo.png"
      alt="Heartbeat of Columbiana County logo"
      height={120}
      width={160}
    /></a
  >

  <ul>
    <NavLink href="/services" text="Services" />
    <NavLink href="/parenting-support" text="Parenting Support" />
    <NavLink href="/events" text="Events" />
    <NavLink href="/participate" text="Participate" />
    <NavLink href="/about" text="About" />
    <NavLink href="/give" text="Give" />
  </ul>
</nav>

<style>
  nav {
    align-items: center;
    color: var(--gray-900);
    display: flex;
    justify-content: space-between;
    padding: 1.2rem 1rem;
  }
  ul {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
  }
</style>
